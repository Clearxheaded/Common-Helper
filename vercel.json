{
  "version": 2,
  "buildCommand": "cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/dist",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/src/index.js"
    },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ]
}